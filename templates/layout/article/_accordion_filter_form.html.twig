<div class="filter-accordion mb-4 {{ order is defined ? order : '' }}"
     data-controller="filter-accordion">
    <div class="filter-label bg-black text-white fw-bolder rounded-2">
        {{ form_label(form) }}
        <i class="bi bi-chevron-compact-down cursor-pointer {{ opened is defined ? 'rotate-180' : '' }}"
           data-action="click->filter-accordion#open"></i>
    </div>
    <div class="filter-body {{ opened is defined ? 'opened' : '' }}">
        {{ form_widget(form) }}
    </div>
</div>
