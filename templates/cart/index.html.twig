{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="alert alert-dark mt-5" role="alert">
            Mon panier
        </div>
        <div class="row">
            <div class="col">
                {% if cart | length > 0 %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Quantit√©</th>
                            <th>Sous-Total</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in cart %}
                            <tr>
                                <th>{{ article.product.name }}</th>
                                <th>{{ article.product.price }}</th>
                                <th>{{ article.quantity }}</th>
                                <th>{{ article.product.price * article.quantity }}</th>
                                <th>
                                    <a href="{{ path('app_cart_remove', {id: article.product.id}) }}" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th colspan="3" class="text-right">Total: </th>
                            <th>{{ total }}</th>
                            <th></th>
                        </tr>
                        </tfoot>
                    </table>
                {% else %}
                    Pas d'article dans le panier
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

